<% @products.each do |product|%>
<div class="entry">
  <table>
    <tr>
      <td rowspan="2">
        <%=image_tag(product.img_url,:width => 100,:height => 120)%>
      </td>
      <td>
        <h3><%=product.title%></h3>
      </td>
    </tr>
    <tr>
      <td style="width: 300px;text-align: left"><%=sanitize(product.description)%></td>
    </tr>
    <tr>
      <td>
        <div class="price_line">
          <span class="price"><%= number_to_currency(product.price)%></span>
        </div>
      </td>
      <td>
        <%=button_to '添加到购物车',line_items_path(:product_id => product),:remote => true%>
      </td>
    </tr>
  </table>

</div>
<% end %>
