<!DOCTYPE html>
<html>
<head>
  <title>Books Online Store</title>
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag "scaffold"%>
  <%= stylesheet_link_tag "store", :media => "all" %>
  <%= javascript_include_tag :defaults %>

  <%= csrf_meta_tag %>
</head>
<body id="store">
<div id="banner">
    <%=image_tag("rails.png",:width => 45,:height => 45)%>
    <%=@page_title||"Pragmatic BookShelf"%>
</div>
<div id="columns">
    <div id="side">
      <div id="cart">
        <%= render @cart%>
      </div>
      <a href="#">home</a><br/>
      <a href="#">questions</a><br/>
      <a href="#">news</a><br/>
      <a href="#">contact</a>
    </div>
    <div id="main">
      <%= yield %>
    </div>
</div>


</body>
</html>
